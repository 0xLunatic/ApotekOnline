<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F4F4F4"
    tools:context=".MainActivity">

    <!-- Search Bar (fixed at the top, not scrollable) -->
    <!-- Scrollable section for medicine list -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="56dp"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF"
        android:elevation="55dp"
        android:queryHint="Cari obat..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Medicine details section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Image of the medicine -->

                        <!-- Medicine details -->
                        <ImageView
                            android:id="@+id/medicineImage1"
                            android:layout_width="83dp"
                            android:layout_height="80dp"
                            android:contentDescription="Gambar obat"
                            android:scaleType="centerCrop"
                            android:src="@drawable/paracetamol" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Medicine name -->
                            <TextView
                                android:id="@+id/medicineName1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paracetamol"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Short description -->
                            <TextView
                                android:id="@+id/medicineDescription1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mengurangi rasa sakit dan demam"
                                android:textSize="14sp" />

                            <!-- Price -->
                            <TextView
                                android:id="@+id/medicinePrice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 5.000"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Add to Cart button -->
                    <Button
                        android:id="@+id/addToCartButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:text="Tambah ke Keranjang"
                        android:backgroundTint="@color/warnaUtama" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView 2 (example) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Medicine details section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Image of the medicine -->
                        <ImageView
                            android:id="@+id/medicineImage2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="Gambar obat"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ibuprofen" />

                        <!-- Medicine details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Medicine name -->
                            <TextView
                                android:id="@+id/medicineName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ibuprofen"

                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Short description -->
                            <TextView
                                android:id="@+id/medicineDescription2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mengurangi rasa sakit dan radang"
                                android:textSize="14sp" />

                            <!-- Price -->
                            <TextView
                                android:id="@+id/medicinePrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 10.000"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Add to Cart button -->
                    <Button
                        android:id="@+id/addToCartButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:text="Tambah ke Keranjang"
                        android:backgroundTint="@color/warnaUtama" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView 3 -->
            <!-- Card untuk obat ketiga bisa ditambahkan seperti di atas -->
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
